<UserControl x:Class="lb4.authorize.PersonCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lb4.authorize"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Label Content="Логин" Margin="141,136,364,272" FontSize="22"/>
        <Label Content="Пароль" Margin="141,178,350,230" FontSize="22"/>
        <TextBox x:Name="login" Margin="226,148,226,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" FontSize="22" Text="admin" TextChanged="login_TextChanged"/>
        <TextBox x:Name="pass" Margin="226,183,226,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" FontSize="22" TextChanged="pass_TextChanged"/>
        <Button x:Name="ok" Content="ok" Margin="320,225,320,169" FontSize="22" Click="ok_Click"/>

    </Grid>
</UserControl>
