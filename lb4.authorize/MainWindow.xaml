<Window x:Class="lb4.authorize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lb4.authorize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <local:PersonCard x:Name="pc" />

        <TextBox x:Name="name" Margin="0,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="name_TextChanged" Height="35" FontSize="22" HorizontalAlignment="Right" Width="150"/>
        <Button x:Name="change_name" Content="Сменить имя" Margin="0,50,10,0" VerticalAlignment="Top" Height="42" Click="change_name_Click" FontSize="22" HorizontalAlignment="Right" Width="150"/>

    </Grid>


</Window>
